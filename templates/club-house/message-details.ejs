<%-include('../partials/head.ejs') %>
<body>
    <%-include('../partials/nav.ejs') %>
    <h1>Post</h1>
    <% if(user && post){ %>
        <h1><%=post.title%></h1>
        <p><%=post.message%></p>
        <%if(user.isAdmin){%>
            <%if(post.author){ %>
                <h2>Author: <%=post.author%></h2>
            <%}%>
            <a href="<%=post.url%>/delete">
                <button class="delete-btn">Delete</button>
            </a>
        <%}%>
    <%}%>
    <%-include('../partials/footer.ejs') %>

</body>
</html>