<%-include('../partials/head.ejs') %>
<body>
    <%-include('../partials/nav.ejs') %>
    <h1>Post</h1>
    <% if(user && post){ %>
        <h1><%=post.title%></h1>
        <blockquote><%=post.message%> </blockquote>
        <%if(user.isMember){%>
            <h2 class="author">
                Author: 
            <%if(post.author){ %>
                    <%=post.author.name%>
            <%} else {%>
                Anonymous
            <%}%>
            </h2>
        <%}%>
        <% if(user.isAdmin){ %>
            <a href="<%=post.url%>/delete">
                <button class="delete-btn">Delete</button>
            </a>
        <%} %>
    <%}%>
    <%-include('../partials/footer.ejs') %>

</body>
</html>